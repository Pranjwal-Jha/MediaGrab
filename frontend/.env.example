# MediaGrab Frontend Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME=MediaGrab
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_HISTORY=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true

# Debug Settings
NEXT_PUBLIC_DEBUG=false
NEXT_TELEMETRY_DISABLED=1

# Upload/Download Limits
NEXT_PUBLIC_MAX_FILE_SIZE=100MB
NEXT_PUBLIC_MAX_DOWNLOADS_PER_HOUR=50

# Social Links (Optional)
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/mediagrab
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key

# Sentry Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
